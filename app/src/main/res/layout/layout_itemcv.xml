<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_item"
    android:layout_margin="16dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imgMinhHoa"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/pajamas_work"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/imgMinhHoa"
        android:id="@+id/l1"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tencv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên công việc : "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/trangthaicv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái : "
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/l1"
        android:id="@+id/l2"
        android:layout_toRightOf="@+id/imgMinhHoa"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/ngaybatdau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/ngayketthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ngày kết thúc"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_edit"
            android:layout_marginRight="20dp"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/btndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_delete"
            android:layout_marginLeft="10dp"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>